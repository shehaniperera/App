<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shehani.app.HealthTip2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity levels"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/textView6"
        android:textIsSelectable="false"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:src="@drawable/humidity_l"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="For improved indoor humidity levels you can check the indoor humidity levels just by using hydrometer which is easily available on any of the local hardware store.
                                                                                              The humidity levels should be between 30 to 60% because higher humidity levels may put higher risk of dust mites and lower humidity levels leads skin and breathing problems."
        android:id="@+id/textView7"
        android:textSize="14sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Next   "
        android:id="@+id/nextTip3btn"
        android:background="#2455f8"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREVIOUS"
        android:id="@+id/previousBtn"
        android:background="#2455f8"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/nextTip3btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/homeBtn"
        android:background="#2455f8"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/nextTip3btn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
