<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    tools:context="com.example.shehani.app.sensorDetails"
    android:background="#75e3fc">

    <Button
        android:layout_width="40dp"
        android:background="@drawable/menu"
        android:id="@+id/btnmenu"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnTemp"
        android:background="@drawable/tem1"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/btnHumidity"
        android:onClick="onClickTemp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnHumidity"
        android:background="@drawable/humidity"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btngas"
        android:background="@drawable/gas6"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnco"
        android:background="@drawable/co4"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/btngas"
        android:layout_alignStart="@+id/btnHumidity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Air Aware"
        android:id="@+id/textView2"
        android:editable="false"
        android:textSize="60dp"
        android:textColor="#090808"
        android:layout_below="@+id/btnmenu"
        android:layout_alignRight="@+id/btnHumidity"
        android:layout_alignEnd="@+id/btnHumidity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:text=""
        android:paddingBottom="20dp"
        android:textColor="#673AB7"
        android:layout_below="@+id/btnTemp"
        android:layout_alignStart="@+id/btnTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:text=""
        android:textColor="#FFA000"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/btnHumidity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:text=""
        android:textColor="#00E676"
        android:layout_below="@+id/btngas"
        android:layout_alignStart="@+id/btngas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:text=""
        android:layout_marginLeft="30dp"
        android:textColor="#F50057"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsave"
        android:text="Save"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    

</RelativeLayout>
