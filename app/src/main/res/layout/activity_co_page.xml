<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shehani.app.CoPage"
    android:background="@drawable/pin5">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CO"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <ProgressBar
        android:id="@+id/circular_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminate="false"
        android:max="35"
        android:progress="1"
        android:progressDrawable="@drawable/circular_progressbar"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="59%"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:layout_alignLeft="@+id/circular_progress_bar"
        android:layout_alignTop="@+id/circular_progress_bar"
        android:layout_alignRight="@+id/circular_progress_bar"
        android:layout_alignBottom="@+id/circular_progress_bar"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" Status - Good "
    android:textStyle="bold|normal"
    android:textSize="30dp"
    android:layout_marginTop="270dp"
    android:layout_centerHorizontal="true"
    android:textColor="#060606" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max CO Level - 700"
        android:layout_marginTop="320dp"
        android:textSize="20dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min CO Level - 350"
        android:layout_marginTop="360dp"
        android:textSize="20dp"
        />

</RelativeLayout>
